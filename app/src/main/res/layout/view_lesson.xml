<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!--title-->
    <TextView
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_lesson_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_subheading"
        android:textStyle="bold"/>

    <!--status-->
    <TextView
        android:id="@+id/lesson_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_caption"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_status"
        android:text="@string/sample_status"/>

</LinearLayout>